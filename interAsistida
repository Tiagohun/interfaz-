    private void botonActionPerformed(java.awt.event.ActionEvent evt) {                                      
        int grandes, medianos, pequeños, horas, costo, perroN;
        grandes=Integer.parseInt(tgrande.getText());
        medianos=Integer.parseInt(tmedianos.getText());
        pequeños=Integer.parseInt(tpequeño.getText());
        horas=Integer.parseInt(thoras.getText());
        perroN=grandes+medianos+pequeños;
        int cos1, cos2, cos3;
        cos1=grandes*10000;
        cos2=medianos*5000;
        cos3=pequeños*3000;
        costo= (cos1+cos2+cos3)*horas;
        if (perroN>1) {
            costo=(int)(costo-(costo*0.1));
        }
        JOptionPane.showMessageDialog(null, costo);
    }                                     

